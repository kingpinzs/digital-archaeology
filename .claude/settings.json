{
  "permissions": {
    "allow": [
      "Bash(git worktree*)",
      "Bash(claude -p*)",
      "Bash(npm install*)",
      "Bash(yarn*)",
      "Bash(tail -f*)",
      "Bash(ps aux*)",
      "Bash(mkdir -p*)",
      "Bash(.claude/skills/parallel-executor/*.sh*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "tools": ["Bash"],
          "command_pattern": "git worktree add"
        },
        "hooks": [
          {
            "type": "command",
            "command": "echo 'üìÅ Worktree created. Remember: npm install in new worktree before running Claude.'"
          }
        ]
      }
    ]
  }
}
